<% if flash[:success] %>
  $('.flashes').replaceWith("<%= j render 'layouts/flash' %>")
  <% flash.clear %>
  $('.row.comments').append("<%= j render @comment %>")
  $('#comment_text').val('')
<% else %>
  $('.comment_errors').html("<%= j render partial: 'layouts/errors', locals: { resource: @comment } %>")
<% end %>
